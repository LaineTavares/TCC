<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_telas"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnRelatorioNutri"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_marginTop="40dp"
            android:background="#CCC"
            android:text="Relatório Nutriente" />

        <Button
            android:id="@+id/btnRelatorioAnimais"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_marginTop="40dp"
            android:background="#CCC"
            android:text="Relatório Animais" />

        <Button
            android:id="@+id/btnRelatorioIngrediente"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_marginTop="40dp"
            android:background="#CCC"
            android:text="Relatório Ingredientes" />

        <Button
            android:id="@+id/btnSairRelatorio"
            android:layout_width="320sp"
            android:layout_height="50sp"
            android:layout_marginTop="40dp"
            android:background="#CCC"
            android:text="Voltar" />
    </LinearLayout>

</RelativeLayout>