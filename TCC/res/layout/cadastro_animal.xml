<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_telas"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lblNome"
            android:layout_width="150sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="30sp"
            android:text="@string/lblNome"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtNome"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:background="#fff"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lblCor"
            android:layout_width="150sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="30sp"
            android:text="@string/lblCor"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtCor"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:background="#fff"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lblTipoAnimal"
            android:layout_width="150sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="30sp"
            android:text="@string/lblTipoAnimal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinnerTipoAnimal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="145sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="30sp"
                android:text="@string/btnSalvar" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="145sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="30sp"
                android:text="Cancelar" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>