<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#666">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    
    <TextView
	        android:id="@+id/lblTipoAnimal"
	        android:layout_width="150sp"
        	android:layout_height="30sp"
        	android:layout_marginLeft="10sp"
        	android:textSize="20sp"
	        android:layout_x="8dp"
	        android:layout_y="9dp"
	        android:text="@string/lblNomeNutriente"
	        android:textAppearance="?android:attr/textAppearanceSmall" />


	
	 <EditText
	        android:id="@+id/txtTipoAnimal"
	        android:layout_width="300dp"
	        android:layout_height="400dp"
	        
	        android:layout_marginLeft="10sp"
	        android:layout_x="100dp"
	        android:layout_y="50dp"
	        android:inputType="textPersonName" />
	 
	 
	    <Button
	        android:id="@+id/btnSalvarTipoAnimal"
	        android:layout_width="300sp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10sp"
	        android:layout_x="173dp"
	        android:layout_y="142dp"
	        android:text="@string/btnSalvarTipoAnimal" />

	    <Button
	        android:id="@+id/btnCancelarTipoAnimal"
	        android:layout_width="132dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10sp"
	        android:text="Cancelar" />

</LinearLayout>
</RelativeLayout>
